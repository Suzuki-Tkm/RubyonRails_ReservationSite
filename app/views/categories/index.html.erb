<% @page_title = "カテゴリー新規登録" %>

<h1><%= @page_title %></h1>

<% if @categories.present? %>
  <table class="list">
    <thead>
      <tr>
        <th>カテゴリー</th>
      </tr>
    </thead>
    <tbody>
      <% @categories.each do |p| %>
        <tr>
          <td><%= p.name %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
  <p>カテゴリーはありません</p>
<% end %>

<%= form_for @category do |form| %>
  <table class="attr">
    <tr>
      <td><%= form.text_field :name, size: 8 %></td>
    </tr>
  </table>
  <div><%= form.submit %></div>
<% end %>